Import java.util.*;
Public class Pattern {
public static void main (String args[]){
Scanner sc = new Scanner (System.in);
System.out.print("enter the size ");
Int n = sc.nextInt();
char ch ='A';
For (int i =1; i<=n;i++){
For(int j=1; j<=i;j++){
System.out.print(ch);
ch++;
}
System.out.println();
}
}
}

